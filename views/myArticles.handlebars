<div id="cards" class="container">

  {{#each articles}}
  	{{#if this.isSaved}}
	    <div class="card blue-grey darken-2 z-depth-3">
	      <div class="card-content white-text">
	        <span class="card-title">{{this.title}}</span>
	        <p>{{this.summary}}</p>
	      </div>

	      <div class="card-content notes white-text">
	      <hr>
	      	   	<ul id="notes">
		      		{{#each this.note}}
		      			<li>{{this.body}}</li>
		      		{{/each}}
		      	</ul>
	      	<button id="addNote"  data-id="{{_id}}" class="waves-effect waves-light btn center teal lighten-2">Note</button>

	      <div>

	      <div class="card-action">
	        <button id="save"  data-id="{{_id}}" class="waves-effect waves-light btn center teal lighten-2">Button</button>
	      </div>
	    </div>
	{{/if}}
  {{/each}}
</div>